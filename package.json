{
  "name": "type-mongodb",
  "version": "1.0.0-beta.2",
  "description": "A simple decorator based MongoDB ODM.",
  "keywords": [],
  "author": "Jordan <j@jrdn.org>",
  "license": "ISC",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -b . --force",
    "clean": "rimraf lib",
    "watch": "tsc -w",
    "prepublishOnly": "yarn clean && yarn build",
    "mongo-start": "MONGODB_VERSION=4.0.x mongodb-runner start --topology=replicaset --name=test --port=31000",
    "mongo-stop": "mongodb-runner stop --topology=replicaset --name=test",
    "test": "jest --runInBand --verbose --coverage",
    "pretest:ci": "yarn mongo-start",
    "test:ci": "yarn mongo-start && jest --verbose --coverage --ci --forceExit --detectOpenHandles --runInBand",
    "posttest:ci": "yarn mongo-stop",
    "pretty": "prettier '{src,tests}/**/*.ts' --write"
  },
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/mongodb": "3.5.25",
    "benchmark": "^2.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "mongodb": "3.x.x",
    "mongodb-runner": "^4.7.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {
    "mongodb": "3.x.x",
    "reflect-metadata": "^0.1.13"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
